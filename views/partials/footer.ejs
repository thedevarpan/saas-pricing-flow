 <script>
    async function buyPlan(planId) {
        const res = await fetch("/payment/create-checkout-session", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ planId })
        });

        const data = await res.json();
        window.location.href = data.url;
    }
</script>

